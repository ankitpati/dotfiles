[advice]
    detachedHead = false
[alias]
    patch = !git --no-pager diff --no-color
[branch]
    sort = -committerdate
[column]
    ui = auto
[commit]
    gpgSign = false
    verbose = true
[core]
    attributesfile = ~/.gitattributes
    editor = vim
    pager = delta
#   pager = diff-so-fancy | less --tabs=4 -RFX
[delta]
    max-line-distance = 1.0
    max-line-length = 0
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
    tool = vimdiff
[diff-so-fancy]
    markEmptyLines = false
[difftool]
    prompt = false
[fetch]
    all = true
    prune = true
    pruneTags = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    process = git-lfs filter-process
    required = true
    smudge = git-lfs smudge -- %f
[gpg]
    format = ssh
    program = gpg2
[gpg "ssh"]
    allowedSignersFile = ~/.ssh/allowed_signers
[init]
    defaultBranch = main
[log]
    date = iso-strict
    showSignature = false
[merge]
    conflictStyle = diff3
    tool = vimdiff
[merge "mergiraf"]
    driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P
    name = mergiraf
[pull]
    ff = only
    rebase = false
[push]
    autoSetupRemote = true
[receive]
    denyCurrentBranch = updateInstead
[rerere]
    autoupdate = true
    enabled = true
[tag]
    gpgSign = true
    sort = -version:refname
[user]
    email = contact@ankitpati.in
    name = Ankit Pati
    signingKey = ~/.ssh/id_ed25519.pub
